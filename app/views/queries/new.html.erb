
<%= form_for @query do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :english %>
  <%= f.text_area :english, :rows => 4 %>

  <%= f.label :other %>
  <%= f.text_area :other, :rows => 4 %>

  <%= f.submit "Post Query" %>
<% end %>