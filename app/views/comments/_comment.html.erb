<li class="comment">
  <div class="content">
   <%= comment.content %>
   <br><br><em><%= comment.created_at.strftime("%B %y, %Y, %I:%M%P") %></em>
   <br><br>Upvotes:<%=comment.up_vote%> Downvotes: <%=comment.down_vote%>
  <%= button_to "Upvote!!!",  %>
  <%= button_to "Downvote!!!",  %>


  <p><%= link_to 'Add a Reply', new_comment_comment_path(comment) %></p>
  </div>


  <% unless comment.comments.empty? %>
    <ul class="comment_list">
      <%= render :partial => 'comments/comment', :collection => comment.comments %>
    </ul>
  <% end %>
</li>
